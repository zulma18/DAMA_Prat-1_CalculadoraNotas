<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!--Encabezado de la app-->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:text="Bienvenid@ a mi App de Notas"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Imagen Logo del encabezado-->
    <ImageView
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintTop_toBottomOf="@id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#070707"
            android:backgroundTint="#FAF9F9"
            android:foregroundTint="#040404"
            android:outlineAmbientShadowColor="#040404"
            android:outlineSpotShadowColor="#040404"
            android:padding="16dp">

            <!---->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Calculadora de Notas"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Campo de entrada name del estudiante -->
            <EditText
                android:id="@+id/studentNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:backgroundTint="#121212"
                android:drawableTint="#0B0B0B"

                android:foregroundTint="#050505"
                android:hint="Nombre del estudiante"
                android:outlineAmbientShadowColor="#0F0E0E"

                android:outlineSpotShadowColor="#090909"
                android:textColor="#0D0D0D"
                android:textColorLink="#161616"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:ignore="MissingConstraints" />

            <!-- Para establecer la nota minima-->
            <EditText
                android:id="@+id/minNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="#121212"
                android:hint="Nota mínima para aprobar"
                android:inputType="numberDecimal"
                android:textColor="#070707"
                android:textColorLink="#161616"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/studentNameInput"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="6dp" />

            <!-- Seleccionar computo -->
            <RadioGroup
                android:id="@+id/computationSelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#040303"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/minNote"
                tools:ignore="MissingConstraints">

                <RadioButton
                    android:id="@+id/computation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#161616"
                    android:buttonTint="#181717"
                    android:shadowColor="#1F1E1E"
                    android:text="Cómputo 1"
                    android:textAlignment="center"
                    android:textColor="#101010"
                    android:textColorLink="#512DA8"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/computation2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cómputo 2"
                    android:textAlignment="center"
                    android:textColor="#101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/computation3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cómputo 3"
                    android:textAlignment="center"
                    android:textColor="#101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <!-- Etiqueta para la primera nota -->
            <TextView
                android:id="@+id/tagsNote1"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"

                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:text="Nota 1: "
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/computationSelector" />

            <!--Ingresar Nota 1 -->
            <EditText
                android:id="@+id/InputNote1"
                android:layout_width="112dp"
                android:layout_height="45dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#121212"

                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:minHeight="28dp"
                android:textAlignment="center"
                android:textColor="#101010"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tagsNote1"
                app:layout_constraintTop_toBottomOf="@id/computationSelector"
                tools:ignore="MissingConstraints" />

            <!-- Etiqueta para la 2° nota -->
            <TextView
                android:id="@+id/tagsNote2"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"

                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:text="Nota 2: "
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tagsNote1" />

            <!--Ingresar Nota 2 -->
            <EditText
                android:id="@+id/InputNote2"
                android:layout_width="112dp"
                android:layout_height="42dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#121212"

                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:minHeight="28dp"
                android:textAlignment="center"
                android:textColor="#101010"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tagsNote1"
                app:layout_constraintTop_toBottomOf="@id/computationSelector"
                tools:ignore="MissingConstraints" />

            <!-- Etiqueta para la 3° nota -->

            <!--Ingresar Nota 3 -->
            <TextView
                android:id="@+id/tagsNote3"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"

                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:text="Nota 3: "
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tagsNote2" />

            <EditText
                android:id="@+id/InputNote3"
                android:layout_width="109dp"
                android:layout_height="42dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#121212"

                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:minHeight="28dp"
                android:textAlignment="center"
                android:textColor="#101010"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tagsNote1"
                app:layout_constraintTop_toBottomOf="@id/computationSelector"
                tools:ignore="MissingConstraints" />

            <!--Para calcular el Promedio-->
            <Button
                android:id="@+id/calculateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#1976D2"
                android:text="Calcular Promedio"
                android:textColor="#FFFFFF"
                android:textColorLink="#512DA8"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.291"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tagsNote3"
                tools:ignore="MissingConstraints" />

            <!-- Para ver el promedio final de las notas de los 3 comp-->
            <Button
                android:id="@+id/viewResultsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="Ver Resultados Finales"
                android:textColor="#FCFFFFFF"
                android:textSize="12.5sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"


                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calculateButton"
                tools:ignore="MissingConstraints" />

            <!-- Resultados del computo -->
            <TextView
                android:id="@+id/resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado: "
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/calculateButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Footer (Pie de página) -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="16dp"
        android:text="ZGuevara © 2025, todos los derechos reservados."
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

